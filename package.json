{
  "name": "ai-software-scanner",
  "displayName": "AI Software Security Scanner",
  "description": "AI-powered security scanner with automated fix suggestions and educational content",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "dnl-trrs",
  "categories": [
    "Linters",
    "Programming Languages",
    "Education",
    "Other"
  ],
  "keywords": [
    "security",
    "vulnerability",
    "scanner",
    "AI",
    "automated-fixes",
    "code-quality",
    "OWASP",
    "secure-coding"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "aiScanner.sidebar",
          "name": "AI Scanner",
          "icon": "$(shield)",
          "contextualTitle": "AI Software Scanner"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-software-scanner.scanFile",
        "title": "Scan Current File for Security Issues",
        "category": "AI Security",
        "icon": "$(shield)"
      },
      {
        "command": "ai-software-scanner.scanWorkspace",
        "title": "Scan Entire Workspace",
        "category": "AI Security",
        "icon": "$(search)"
      },
      {
        "command": "ai-software-scanner.showSecurityPanel",
        "title": "Show Security Panel",
        "category": "AI Security",
        "icon": "$(dashboard)"
      },
      {
        "command": "ai-software-scanner.applyFix",
        "title": "Apply Security Fix",
        "category": "AI Security"
      },
      {
        "command": "ai-software-scanner.showEducation",
        "title": "Show Security Education",
        "category": "AI Security"
      },
      {
        "command": "ai-software-scanner.demoUI",
        "title": "Demo UI (Show Sample Recommendations)",
        "category": "AI Security",
        "icon": "$(beaker)"
      },
      {
        "command": "ai-software-scanner.showRecommendations",
        "title": "View All Recommendations",
        "category": "AI Security"
      },
      {
        "command": "ai-software-scanner.manageSubscription",
        "title": "Manage Subscription",
        "category": "AI Security"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-software-scanner.scanFile",
          "group": "1_modification",
          "when": "resourceExtname =~ /\\.(js|ts|jsx|tsx|py|java|go|rb|php|cs|cpp|c)$/"
        }
      ],
      "editor/title": [
        {
          "command": "ai-software-scanner.scanFile",
          "group": "navigation",
          "when": "resourceExtname =~ /\\.(js|ts|jsx|tsx|py|java|go|rb|php|cs|cpp|c)$/"
        }
      ],
      "explorer/context": [
        {
          "command": "ai-software-scanner.scanFile",
          "group": "2_workspace",
          "when": "resourceExtname =~ /\\.(js|ts|jsx|tsx|py|java|go|rb|php|cs|cpp|c)$/"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ai-software-scanner.scanFile",
        "key": "shift+alt+s",
        "mac": "shift+cmd+s",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-software-scanner.showSecurityPanel",
        "key": "shift+alt+p",
        "mac": "shift+cmd+p"
      }
    ],
    "configuration": {
      "title": "AI Security Scanner",
      "properties": {
        "aiSecurityScanner.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the AI Security Scanner"
        },
        "aiSecurityScanner.scanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan files when saved"
        },
        "aiSecurityScanner.scanOnOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan files when opened"
        },
        "aiSecurityScanner.severityLevel": {
          "type": "string",
          "default": "medium",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Minimum severity level to report"
        },
        "aiSecurityScanner.enableEducationalContent": {
          "type": "boolean",
          "default": true,
          "description": "Show educational content with vulnerabilities (our key differentiator)"
        },
        "aiSecurityScanner.enableAutomaticFixes": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic fix suggestions (competitive advantage over Snyk AI)"
        },
        "aiSecurityScanner.aiProvider": {
          "type": "string",
          "default": "local",
          "enum": ["local", "openai", "claude"],
          "description": "AI provider for enhanced recommendations"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnl-trrs/AI-Software-Scanner.git"
  },
  "bugs": {
    "url": "https://github.com/dnl-trrs/AI-Software-Scanner/issues"
  },
  "homepage": "https://github.com/dnl-trrs/AI-Software-Scanner#readme"
}
