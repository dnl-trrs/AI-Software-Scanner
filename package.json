{
  "name": "ai-software-scanner",
  "displayName": "AI Software Scanner",
  "description": "AI-powered software scanner for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "aiSoftwareScannerResults",
          "name": "AI Software Scanner",
          "icon": "$(shield)",
          "contextualTitle": "AI Software Scanner Results"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-software-scanner.scanFile",
        "title": "AI Scanner: Scan Current File",
        "icon": "$(shield)"
      },
      {
        "command": "ai-software-scanner.scanWorkspace",
        "title": "AI Scanner: Scan Workspace",
        "icon": "$(folder)"
      },
      {
        "command": "ai-software-scanner.clearResults",
        "title": "AI Scanner: Clear Results",
        "icon": "$(clear-all)"
      },
      {
        "command": "ai-software-scanner.showSettings",
        "title": "AI Scanner: Open Settings",
        "icon": "$(settings-gear)"
      }
    ],
    "configuration": {
      "title": "AI Software Scanner",
      "properties": {
        "aiSoftwareScanner.aiProvider": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "anthropic", "local"],
          "description": "AI provider to use for code analysis"
        },
        "aiSoftwareScanner.fallbackProvider": {
          "type": "string",
          "enum": ["openai", "anthropic", "local", "none"],
          "default": "none",
          "description": "Fallback AI provider to use if primary provider fails"
        },
        "aiSoftwareScanner.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the primary AI service"
        },
        "aiSoftwareScanner.fallbackApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the fallback AI service"
        },
        "aiSoftwareScanner.maxRequestsPerMinute": {
          "type": "number",
          "default": 20,
          "description": "Maximum number of AI requests per minute"
        },
        "aiSoftwareScanner.maxTokens": {
          "type": "number",
          "default": 2000,
          "description": "Maximum number of tokens to use in AI requests"
        },
        "aiSoftwareScanner.temperature": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 2,
          "description": "AI response temperature (0-2). Lower values are more focused/deterministic"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf out dist"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.4.4",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "openai": "^4.0.0",
    "node-fetch": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnl-trrs/AI-Software-Scanner.git"
  },
  "bugs": {
    "url": "https://github.com/dnl-trrs/AI-Software-Scanner/issues"
  },
  "homepage": "https://github.com/dnl-trrs/AI-Software-Scanner#readme"
}
